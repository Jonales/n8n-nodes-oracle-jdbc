{
  "compilerOptions": {
    // ==========================================
    // üéØ LANGUAGE AND ENVIRONMENT - ORACLE JDBC OPTIMIZED
    // ==========================================
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "ES2022.Promise", "ES2022.String"],
    "module": "CommonJS",
    "moduleResolution": "bundler",
    
    // ==========================================
    // üì¶ MODULES - N8N STRUCTURE OPTIMIZED
    // ==========================================
    "baseUrl": ".",
    "paths": {
      // Core application paths
      "@/*": ["./src/*"],
      "@nodes/*": ["./nodes/*"],
      "@credentials/*": ["./credentials/*"],
      "@types/*": ["./types/*"],
      "@utils/*": ["./utils/*"],
      "@core/*": ["./core/*"],
      "@scripts/*": ["./scripts/*"],
      
      // Oracle JDBC specific paths
      "@oracle/*": ["./core/oracle/*"],
      "@oracle/types/*": ["./types/oracle/*"],
      "@oracle/pool/*": ["./core/oracle/pool/*"],
      "@oracle/transaction/*": ["./core/oracle/transaction/*"],
      
      // N8N specific paths
      "@n8n/*": ["./nodes/*", "./credentials/*"],
      "@n8n-types/*": ["./types/n8n/*"]
    },
    "rootDir": ".",
    "rootDirs": [".", "./src", "./nodes", "./credentials", "./core"],
    "typeRoots": [
      "./node_modules/@types",
      "./types",
      "./types/global"
    ],
    "types": [
      "node",
      "jest",
      "uuid"
    ],
    
    // ==========================================
    // üöÄ EMIT - PERFORMANCE OPTIMIZED
    // ==========================================
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": false,
    "downlevelIteration": true,
    "importHelpers": true,
    "newLine": "lf",
    "preserveValueImports": true,
    "stripInternal": true,
    
    // ==========================================
    // üîó INTEROP CONSTRAINTS - JAVA BRIDGE COMPATIBLE
    // ==========================================
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": false,
    "allowUmdGlobalAccess": true,
    
    // ==========================================
    // üîí TYPE CHECKING - ENTERPRISE GRADE
    // ==========================================
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": false,
    "noImplicitOverride": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "exactOptionalPropertyTypes": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "useUnknownInCatchVariables": true,
    "noPropertyAccessFromIndexSignature": false,
    "noImplicitReturns": true,
    
    // ==========================================
    // ‚ö° PERFORMANCE - CACHE OPTIMIZED
    // ==========================================
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "incremental": true,
    "tsBuildInfoFile": "./.cache/tsconfig.tsbuildinfo",
    "assumeChangesOnlyAffectDirectDependencies": true,
    "disableReferencedProjectLoad": false,
    "disableSolutionSearching": false,
    "disableSourceOfProjectReferenceRedirect": false,
    
    // ==========================================
    // üé® ADVANCED FEATURES
    // ==========================================
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": false,
    "allowJs": false,
    "checkJs": false,
    
    // ==========================================
    // üìä OUTPUT FORMATTING
    // ==========================================
    "pretty": true,
    "preserveWatchOutput": true,
    "noErrorTruncation": true,
    "generateCpuProfile": "tsc-profile.cpuprofile"
  },
  
  // ==========================================
  // üìÅ PROJECT STRUCTURE
  // ==========================================
  "include": [
    // Core application files
    "nodes/**/*",
    "credentials/**/*", 
    "core/**/*",
    "types/**/*",
    "utils/**/*",
    "scripts/**/*.ts",
    "*.ts",
    
    // Global type declarations
    "types/global.d.ts",
    "types/java.d.ts",
    "types/oracle.d.ts",
    "types/n8n-extended.d.ts"
  ],
  
  "exclude": [
    // Build outputs
    "dist/**/*",
    "lib/**/*",
    
    // Dependencies
    "node_modules/**/*",
    
    // Test and coverage
    "coverage/**/*",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/__tests__/**/*",
    
    // Scripts and configs
    "scripts/verification-test/**/*",
    "scripts/**/*.js",
    "gulpfile.js",
    "jest.config.js",
    "*.config.js",
    
    // Cache and temporary
    ".cache/**/*",
    "*.tsbuildinfo",
    
    // IDE and OS
    ".vscode/**/*",
    ".idea/**/*",
    "**/.DS_Store"
  ],
  
  // ==========================================
  // üîß TS-NODE CONFIGURATION
  // ==========================================
  "ts-node": {
    "esm": false,
    "experimentalSpecifierResolution": "node",
    "transpileOnly": true,
    "files": true,
    "skipProject": false,
    "skipIgnore": false,
    "preferTsExts": true,
    "compilerOptions": {
      "module": "CommonJS",
      "target": "ES2022",
      "moduleResolution": "node",
      "allowJs": true,
      "resolveJsonModule": true
    },
    "require": [
      "tsconfig-paths/register"
    ]
  },
  
  // ==========================================
  // üëÄ WATCH OPTIONS - OPTIMIZED FOR DEVELOPMENT
  // ==========================================
  "watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "fallbackPolling": "dynamicPriority",
    "synchronousWatchDirectory": true,
    "excludeFiles": [
      "**/*.test.ts",
      "**/*.spec.ts",
      "**/*.js.map",
      "**/*.d.ts.map"
    ],
    "excludeDirectories": [
      "**/node_modules",
      "**/dist",
      "**/coverage",
      "**/lib",
      "**/.cache",
      "**/scripts/verification-test"
    ]
  },
  
  // ==========================================
  // üéõÔ∏è COMPILER DIAGNOSTICS - DEBUG MODE
  // ==========================================
  "compileOnSave": false,
  "buildOnSave": false,
  
  // ==========================================
  // üìã TYPE ACQUISITION - AUTO DISCOVERY
  // ==========================================
  "typeAcquisition": {
    "enable": true,
    "include": [
      "node",
      "jest",
      "uuid",
      "java"
    ],
    "exclude": [
      "jquery",
      "lodash"
    ],
    "disableFilenameBasedTypeAcquisition": false
  }
}
